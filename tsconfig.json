{
	"extends": ["@sapphire/ts-config/base", "@sapphire/ts-config/extra-strict", "@sapphire/ts-config/decorators"],
	"compilerOptions": {
		"incremental": false,
		"useDefineForClassFields": false,
		"outDir": "dist",
		"sourceMap": true,
		"inlineSources": true,

		// Set `sourceRoot` to  "/" to strip the build path prefix
		// from generated source code references.
		// This improves issue grouping in Sentry.
		"sourceRoot": "/"
	},
	"include": ["src"]
}
